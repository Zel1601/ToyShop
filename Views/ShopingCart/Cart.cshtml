@using ToyShop.Models
@model List<Carts>
@{
    ViewBag.Title = "Giỏ Hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-section set-bg" data-setbg="Images/banner2.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <div class="breadcrumb__text">
                    <h2>Giỏ Hàng</h2>
                    <div class="breadcrumb__option">
                        <a href="@Url.Action("Index","Home")">Home</a>
                        <span>Shopping Cart</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shoping Cart Section Begin -->
<section class="shoping-cart spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__table">
                    <table>
                        <thead>
                            <tr>
                                <th class="shoping__product">Products</th>
                                <th>Giá</th>
                                <th>Số Lượng</th>
                                <th>Tổng</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                @foreach (var item in Model)
                                {
                                    <td class="shoping__cart__item">
                                        <img src="@item.iproImage" alt="@item.iproName">
                                        <h5>@item.iproId</h5>
                                    </td>
                                    <td class="shoping__cart__price">
                                        @item.iproPrice nghìn đồng
                                    </td>
                                    <td class="shoping__cart__quantity">
                                        <div class="quantity">
                                            <div class="pro-qty">
                                                <input type="number" min="1" name="txtSoluong" value="@item.isoLuong">
                                            </div>
                                        </div>
                                    </td>
                                    <td class="shoping__cart__total">
                                        @item.ithanhtien nghìn đồng
                                    </td>
                                    <td class="shoping__cart__item__close">
                                        <a href="@Url.Action("DeleteCart","ShopingCart",new { @iproId = item.iproId})"><span class="icon_close"></span></a>
                                    </td>
                                    <td>
                                        <a href="@Url.Action("UpdateCart", "ShopingCart", new { @iproId = item.iproId})" class="primary-btn cart-btn cart-btn-right">
                                            <span class="icon_loading"></span>
                                            Upadate Cart
                                        </a>
                                    </td>
                                }
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="shoping__cart__btns">
                    <a href="@Url.Action("Index","Product")" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                   
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__continue">
                    <div class="shoping__discount">
                        <h5>Discount Codes</h5>
                        <form action="#">
                            <input type="text" placeholder="Enter your coupon code">
                            <button type="submit" class="site-btn">APPLY COUPON</button>
                        </form>
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="shoping__checkout">
                    <h5>Cart Total</h5>
                    <ul>
                        <li>Subtotal <span>@ViewBag.SumSoLuong </span></li>
                        <li>Total <span>@ViewBag.Sum Nghìn Đồng</span></li>
                    </ul>
                    <a href="@Url.Action("CheckOut","ShopingCart")" class="primary-btn">PROCEED TO CHECKOUT</a>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Shoping Cart Section End -->
