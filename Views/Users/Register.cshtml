
@{
    ViewBag.Title = "Đăng Ký";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<table align="center">
    <h2 style="text-align:center">Đăng Ký Người Dùng</h2>
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        <tr style="height : 40px">
            <td> Họ tên khách hàng :</td>
            <td>
                @Html.TextBox("Hoten")
                @ViewData["Loi1"]
            </td>
        </tr>
        <tr style="height:40px">
            <td>Tên Đăng Nhập</td>
            <td>
                @Html.TextBox("UserAccount")
            @ViewData["Loi2"]
        </td>
    </tr>
    <tr>
        <td>Email</td>
        <td>
            @Html.TextBox("Email")
        @ViewData["Loi3"]
    </td>
</tr>
<tr style="height:40px">
    <td>Mật khẩu</td>
    <td>
        @Html.TextBox("Password")
    @ViewData["Loi4"]
</td>
</tr>
<tr style="height:40px">
    <td>Địa chỉ</td>
    <td>
        @Html.TextBox("Address")
    @ViewData["Loi5"]
</td>
</tr>
<tr style="height:40px">
    <td>Số Điện Thoại</td>
    <td>
        @Html.TextBox("Phone")
    @ViewData["Loi6"]
</td>
</tr>
<tr style="height:40px">
    <td>Ngày Sinh :</td>
    <td>
        <input type="date" name="Ngaysinh" />
    </td>
</tr>
<tr>
    <td></td>
    <td>        <input type="Submit" value="Đăng ký" />
    </td>
</tr>
}
</table>

