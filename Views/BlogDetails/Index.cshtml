@using ToyShop.Models
@{
    ViewBag.Title = "Chi Tiết Bài Viết";
    Blog k = ViewData["BaiVietCanXem"] as Blog;
}

<!-- Blog Details Hero Begin -->
<section class="blog-details-hero set-bg" data-setbg="Images/banner2.jpg">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="blog__details__hero__text">
                    <h2>Thông Tin Bài Viết</h2>
                    <ul>
                        <li>By Nguyễn Phát tài</li>
                        <li>18/12/2022</li>
                        <li>0 Bình Luận</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Hero End -->
<!-- Blog Details Section Begin -->
<section class="blog-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5 order-md-1 order-2">
                <div class="blog__sidebar">
                    <div class="blog__sidebar__search">
                        <form action="#">
                            <input type="text" placeholder="Search...">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Categories</h4>
                        <ul>
                            <li><a href="@Url.Action("Index","Product")">All</a></li>
                            @{
                                foreach (Category c in Original.layTheLoai())
                                {
                                    <li><a href="@Url.Action("SPTheoCategory", "Home", new { id = c.Id })">@c.CatName</a></li>
                                }
                            }


                        </ul>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Recent News</h4>
                        <div class="blog__sidebar__recent">

                            @{ int n = 0;
                                foreach (Blog h in Original.laybaiviet())
                                {
                                    <a href="@Url.Action("Index","BlogDetails", new {mabaiviet = h.BlogId})" class="blog__sidebar__recent__item">
                                        <div class="blog__sidebar__recent__item__pic">
                                            <img src="@h.BlogImages" alt="@h.BlogName" width="200">
                                        </div>
                                        <div class="blog__sidebar__recent__item__text">
                                            <h6>@h.BlogName</h6>
                                            <span>@h.BlogDate</span>
                                        </div>
                                    </a>
                                    if (n++ >= 2)
                                    {
                                        break;
                                    }
                                }
                            }
                        </div>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Search By</h4>
                        <div class="blog__sidebar__item__tags">
                            @{
                                foreach (Category j in Original.layTheLoai())
                                {
                                    <a href="@Url.Action("SPTheoCategory", "Home", new { id = j.Id })">@j.CatName</a>
                                }
                            }
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-8 col-md-7 order-md-1 order-1">
                <div class="blog__details__text">
                    <img src="@k.BlogImages" alt="">
                    <p>
                        @k.BlogDes
                    </p>
                    <h3>
                        @k.BlogName
                    </h3>
                </div>
                <div class="blog__details__content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="blog__details__author">
                                <div class="blog__details__author__text">
                                    <h6>@k.Adminstrator.name</h6>
                                    <span>@k.Adminstrator.username</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="blog__details__widget">
                                <div class="blog__details__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-google-plus"></i></a>
                                    <a href="#"><i class="fa fa-linkedin"></i></a>
                                    <a href="#"><i class="fa fa-envelope"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->
